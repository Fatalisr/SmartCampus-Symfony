{% extends 'base.html.twig' %}

{% block title %}Espace Technicien{% endblock %}

{% block body %}

        <section class="bandeau_tech">
            <div class="pres_page">
                <h1>Bonjour Technicien</h1>
                <p>Vous êtes sur l'espace technicien. Vous pouvez consulter l'ensemble de vos interventions et les valider.</p>
            </div>
        </section>

        <section id="liste_interventions">
            <ul class="block_interv">
                <h1>Installations en attente</h1>
                <div>
                    {% for install in installations %}
                        <a id="view" href="{{ path('app_view_installation', {'id': install.sa.getId}) }}">
                            <div class="listIntervention">
                                <div>
                                    {{ install.sa.name }}
                                </div>
                                <div>
                                    {% if install.sa.getOldRoom == NULL%}
                                        <p>{{ install.sa.getCurrentRoom.name }}</p>
                                    {% else %}
                                        <p>{{ install.sa.getOldRoom.getName }} vers {{ install.sa.getCurrentRoom.getName }}</p>
                                    {% endif %}
                                </div>
                            </div>
                        </a>
                    {% endfor %}

                </div>
            </ul>
            <ul class="block_interv">
                <h1>Maintenances en attente</h1>
                <div>
                    {% for maintenance in maintenances %}
                        <a id="view" href="{{ path('app_view_maintenance', {'id': maintenance.sa.id}) }}">
                            <div class="listIntervention"> <!-- UN <LI></LI> = UNE LIGNE : ajouter les elements À L'INTERIEUR du li. Le webdesigner. -->
                                <p>{{ maintenance.sa.getName }}</p>
                                <p>{{ maintenance.sa.getCurrentRoom.getName }}</p>
                            </div>
                        </a>
                    {% endfor %}
                </div>
            </ul>
        </section>
{% endblock %}
